<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.refutix.refutix.web.server.mapper.RoleMenuMapper">

	<resultMap type="org.refutix.refutix.web.server.data.model.RoleMenuRel" id="SysRoleMenuResult">
		<result property="id"         column="id"           />
		<result property="roleId"     column="role_id"      />
		<result property="menuId"     column="menu_id"      />
	</resultMap>
	
	<select id="checkMenuExistRole" resultType="Integer">
	    select count(1) from role_menu where menu_id = #{menuId} limit 1
	</select>

	<select id="queryRoleMenuByUser" resultMap="SysRoleMenuResult">
		select *
		from role_menu
		where role_id in (select role_id
						  from user_role
						  where user_id = #{userId})
	</select>

	<delete id="deleteRoleMenuByRoleId" parameterType="Integer">
		delete from role_menu where role_id=#{roleId}
	</delete>
	
	<delete id="deleteRoleMenu" parameterType="Integer">
 		delete from role_menu where role_id in
 		<foreach collection="array" item="roleId" open="(" separator="," close=")">
 			#{roleId}
        </foreach> 
 	</delete>
	
	<insert id="batchRoleMenu">
		insert into role_menu(role_id, menu_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.roleId},#{item.menuId})
		</foreach>
	</insert>
	
</mapper> 